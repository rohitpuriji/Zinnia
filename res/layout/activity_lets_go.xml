<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SplashScreen">

    <Button 
        android:id="@+id/btnLetsGo"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/btn_lets_margin_left"
        android:layout_marginRight="@dimen/btn_lets_margin_right"
        android:layout_marginBottom="@dimen/btn_lets_margin_bottom"
        android:background="@drawable/letsgo"
        />

</RelativeLayout>
